$montserrat = Montserrat, Helvetica, Arial, sans-serif;
$opensans = Open Sans, Helvetica, Arial, sans-serif;

/************************************\
ICOMOON FONTS
\************************************/
@font-face {
    font-family: 'icomoon';
    src:  url('../fonts/icomoon/icomoon.eot?o2so8g');
    src:  url('../fonts/icomoon/icomoon.eot?o2so8g#iefix') format('embedded-opentype'),
            url('../fonts/icomoon/icomoon.ttf?o2so8g') format('truetype'),
            url('../fonts/icomoon/icomoon.woff?o2so8g') format('woff'),
            url('../fonts/icomoon/icomoon.svg?o2so8g#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

