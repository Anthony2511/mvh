.contact-page
  &__container
    background-color $cDarkThree
    display flex
    flex-direction row
    justify-content space-between
    margin s(50,16) 0
    color $cWhite
    width 100%
  &__bloc
    padding s(50,16)
    &--left
      background-color $cDarkFour
      width 45%
    &--right
      width 55%
  &__logo
    margin-bottom s(50)
  &__form-champ
    display flex
    flex-direction column
    margin-bottom s(30)
    &:last-child
      margin-bottom 0
  &__form-required
    font-style italic
    font-weight: 300
    margin-bottom s(30)
    & span
      color $cRedLight
  &__form-label
    margin-bottom s(10)
    font-weight:600
    & span
      color $cRedLight
  &__form-input
    border-radius 5px
    padding s(15) s(10)
    border 1px solid transparent
    transition .3s ease-in-out
    background-color $cLightGrey
    width 100%
    &:hover,
    &:focus
      border 1px solid $cRedLight
      transition .3s ease-in-out

.textarea
  resize none