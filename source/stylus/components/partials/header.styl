.header
  background url('../images/background-header.jpg') no-repeat top center/cover
  background-position 80% 50%
  height 100vh
  position relative
  &:before
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    width: 100%
    height 100%
    background-image: linear-gradient(to bottom, #686566, #565253, #444041, #332f30, #231f20);
    opacity 0.8
    z-index: 1

.header-home
  position absolute
  z-index 15
  left 0
  right 0
  top 50%
  display flex
  flex-direction column
  justify-content center
  align-items center
  align-content center
  &__wrapper
    position relative
    height 100vh
  &__text
    width 60%
    text-align center