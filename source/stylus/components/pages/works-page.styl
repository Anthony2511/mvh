.works-page
  &__wrap
    display flex
    flex-flow row nowrap
    justify-content space-between
    width 100%
    margin-bottom s(50)
    position relative
    &:nth-child(even)
      flex-flow row-reverse nowrap
      & .home-chantiers__category
        position absolute
        top 0
        right 0
        color $cWhite
        background-color $cRedLight
        padding s(10) s(20)
        border-radius 0 0 0 5px
        font-style italic
        font-weight:300
  &__container
    margin-top s(50)
  &__figure
    width 45%
    position relative
    & img
      width 100%
  &__bloc
    width 55%
    background-color $cDarkFour
    padding s(30)
  &__infos
    color $cWhite
    margin-bottom s(20)