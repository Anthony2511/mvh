.nav
  position absolute
  top s(30)
  left 0
  right 0
  z-index 2
  max-width s(1240)
  margin 0 auto
  &__bloc
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items flex-start
  &__wrapper
    position relative
  &__item
    display: inline-block
    padding s(15) s(25)
    &:last-child
      padding-right 0
  &__link
    color $cWhite
    font-size s(16)
    line-height s(32,16)
    & span
      position relative
      &:before
        content ''
        position absolute
        left 50%
        bottom -17px
        width 100%
        height 2px
        background-color $cDarkFour
        transform-origin center
        transform translate(-50%, 0) scaleX(0)
        transition transform 0.3s ease-in-out
      &:hover
        &:before
          transform: translate(-50%, 0) scaleX(1)
  &__logo
    width s(100)

